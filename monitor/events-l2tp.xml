<?xml version="1.0" encoding="UTF-8"?>
<logmon version="1">
	<events service="l2tp">
		<source refname="syslog" />
		<event type="granted">
			<pattern>/^.* racoon: INFO: ISAKMP-SA established .*\[.*\]-(.*)\[.*\] spi:.*$/U</pattern>
			<pattern>/^.* pppd\[.*\]: PAP peer authentication succeeded for (.*)$/U</pattern>
			<hostip>0</hostip>
			<hostmac decoder="macfromip">0</hostmac>
			<user>1</user>
		</event>
		<event type="denied">
			<pattern>/^.* racoon: INFO: ISAKMP-SA established .*\[.*\]-(.*)\[.*\] spi:.*$/U</pattern>
			<pattern>/^.* pppd\[.*\]: PAP peer authentication failed for (.*)$/U</pattern>
			<hostip>0</hostip>
			<hostmac decoder="macfromip">0</hostmac>
			<user>1</user>
		</event>
	</events>
</logmon>
