<?xml version="1.0" encoding="UTF-8"?>
<logmon version="1">
	<events sourceid="syslog" service="pppd">
		<event type="granted">
			<pattern>/^.* pppd\[.*\]: PAP peer authentication succeeded for (.*)$/U</pattern>
			<pattern>/^.* pppd\[.*\]: remote IP address (.*)$/U</pattern>
			<user>0</user>
			<hostip>1</hostip>
		</event>
		<event type="denied">
			<pattern>/^.* pppd\[.*\]: PAP peer authentication failed for (.*)$/U</pattern>
			<user>0</user>
		</event>
	</events>
</logmon>
